<?xml version="1.0" encoding="utf-8"?>

<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignItems="stretch"
    app:flexDirection="column"
    app:flexWrap="wrap"
    app:justifyContent="space_between">

    <ir.hadinemati.steelmarketing.Views.Widgets.TextViewPersian
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="بازار یابی"
        android:textSize="24dp"
        app:layout_flexGrow="0.1" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:alignItems="stretch"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="space_between"
        app:layout_flexGrow="2">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:flexDirection="column"
            app:layout_flexGrow="1.9"
            app:flexWrap="wrap"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:elevation="15dp"
                android:padding="15dp"
                app:cardCornerRadius="10dp"
                app:layout_flexGrow="1.2">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/MainLLNewSell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/green_500"
                        android:gravity="center">

                        <ir.hadinemati.steelmarketing.Views.Widgets.TextViewPersian
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="فروش جدید"
                            android:textColor="@color/white"
                            android:textSize="22dp" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:elevation="15dp"
                android:padding="15dp"
                app:cardCornerRadius="10dp"
                app:layout_flexGrow="1.5">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/MainLLAccounting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/sky_light_blue"
                        android:gravity="center">

                        <ir.hadinemati.steelmarketing.Views.Widgets.TextViewPersian
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="دفتر حساب"
                            android:textColor="@color/white"
                            android:textSize="22dp" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:elevation="15dp"
                android:padding="15dp"
                app:cardCornerRadius="10dp"
                app:layout_flexGrow="1">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/MainLLPictures"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue_600"
                        android:gravity="center">

                        <ir.hadinemati.steelmarketing.Views.Widgets.TextViewPersian
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="تصاویر"
                            android:textColor="@color/white"
                            android:textSize="22dp" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>


            </androidx.cardview.widget.CardView>

        </com.google.android.flexbox.FlexboxLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="15dp"
            app:cardCornerRadius="10dp"
            app:layout_flexGrow="2.5">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue_grey_700"
                    android:gravity="center"

                    >

                    <include layout="@layout/last_caller_information" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>


        </androidx.cardview.widget.CardView>
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:alignItems="stretch"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="space_between"
        app:layout_flexGrow="1.2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:elevation="15dp"
            android:padding="15dp"
            app:cardCornerRadius="10dp"
            app:layout_flexGrow="1">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/MainLLSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/orange_400"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ir.hadinemati.steelmarketing.Views.Widgets.FontAwesomeIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf085;"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ir.hadinemati.steelmarketing.Views.Widgets.TextViewPersian
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="تنظیمات"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:elevation="15dp"
            android:padding="15dp"
            app:cardCornerRadius="10dp"
            app:layout_flexGrow="1">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/MainLLStatistic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_300"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ir.hadinemati.steelmarketing.Views.Widgets.FontAwesomeIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" &#xf080;"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ir.hadinemati.steelmarketing.Views.Widgets.TextViewPersian
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="آمار"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:elevation="15dp"
            android:padding="15dp"
            app:cardCornerRadius="10dp"
            app:layout_flexGrow="1">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/MainLLCallsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_300"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ir.hadinemati.steelmarketing.Views.Widgets.FontAwesomeIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf007;"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ir.hadinemati.steelmarketing.Views.Widgets.TextViewPersian
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="لیست تماس ها"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>





